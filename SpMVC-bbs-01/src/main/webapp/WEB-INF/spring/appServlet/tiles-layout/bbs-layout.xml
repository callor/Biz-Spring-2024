<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
  "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
  "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

	<definition name="bbs" extends="default">
			<put-attribute name="content" value="/WEB-INF/views/bbs/home.jsp">
				<definition name="bbs/*" extends="bbs">
					<put-attribute name="aside-left" value="/WEB-INF/views/bbs/bbs-aside-left.jsp" />
					<put-attribute name="aside-right"
						value="/WEB-INF/views/bbs/{1}.jsp" />
				</definition>
			</put-attribute> 
	</definition>
	
	
</tiles-definitions>




